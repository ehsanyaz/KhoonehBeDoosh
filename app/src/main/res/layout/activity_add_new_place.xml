<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseColor"
    tools:context="ir.ac.bonabu.khoonehbedoosh.AddNewPlace">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/add_place_addPic_btn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/addpicture" />

                <ImageView
                    android:id="@+id/add_place_addLocation_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/locatio" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/editext"/>

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/editext"/>

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/editext"/>

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/editext"/>

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:hint="نام مالک"
                        android:background="@drawable/editext"/>

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:hint="هزینه هر شب اقامت"
                        android:background="@drawable/editext"/>

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:hint="ظرفیت"
                        android:background="@drawable/editext"/>


                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:hint="متراژ"
                        android:background="@drawable/editext"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="10dp"
                        android:layout_marginTop="10dp"
                        android:text="عنوان:"
                        android:textColor="#FFFFFF" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="25dp"
                        android:text="استان:"
                        android:textColor="#FFFFFF" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="35dp"
                        android:text="شهر:"
                        android:textColor="#FFFFFF" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="32dp"
                        android:text="آدرس:"
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/addNewPlace_img2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="26dp"
                        android:src="@drawable/account" />

                    <ImageView
                        android:id="@+id/addNewPlace_img1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="19dp"
                        android:src="@drawable/cash" />

                    <ImageView
                        android:id="@+id/addNewPlace_img3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/population" />

                    <ImageView
                        android:id="@+id/addNewPlace_img4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/size" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>
